<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <LinearLayout android:id="@+id/ll_camera" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp"
                   android:src="@android:drawable/ic_menu_camera"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center"

                  android:text="@string/menu_camera"/>
    </LinearLayout>

    <LinearLayout android:layout_below="@+id/ll_camera" android:id="@+id/ll_gallery" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_margin="5dp">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@android:drawable/ic_menu_gallery"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/meny_gallery"
                  android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>